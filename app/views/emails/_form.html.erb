<%= form_for [object, email] do |f| %>
  <%= f.hidden_field :emailable_type, value: object.class.name %>
  <%= f.hidden_field :emailable_id, value: object.id %>
  <% unless @freshdesk %>

      <div class="form-group">
        <%= f.label :subject, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :subject, class: 'form-control' %>
          <br/>
        </div>
      </div>

        <div class="form-group">
          <%= f.label :to, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :to, class: 'form-control' %>
            <br/>
          </div>
        </div>


      <div class="form-group">
        <%= f.label :from, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :from, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :cc, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :cc, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :bcc, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :bcc, class: 'form-control' %>
          <br/>
        </div>
      </div>
    <%end%>

      <div class="form-group">
        <%= f.label :body, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :body, class: 'form-control summernote', rows: 30 %>
        </div>
      </div>

  <% unless @freshdesk %>
    <div class="form-group">
      <%= f.label :plaintext_body, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :plaintext_body, class: 'form-control', rows: 30 %>
      </div>
    </div>
  <% end %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <!--
          <button type="submit" class="btn btn-info">
            Send E-mail
          </button>
          -->
 
          <% unless object.freshdesk_ticket_id.blank? %>
            <button id='freshdesk-copypaste-btn' type='button' class='btn btn-warning';' data-quote-id="<%= object.id %>">
              Prepare for Freshdesk
            </button>
          <% end %>

       </div>
      </div>

<% end %>
