<% url = determine_url(@line_item, @line_itemable) %>
<%= form_for [@line_itemable, @line_item], url: url, remote: true, builder: LancengFormBuilder do |f| %>
	<%= f.label.error.text_field   :name %>
	<%= f.label.error.text_area    :description %>
	<%= f.label.error.check_box    :taxable, style: "width: 34px; height: 34px;" %>
	<%= f.label.error.number_field :quantity %>
	<%= f.label.error.number_field :unit_price %>

  <%= f.submit 'Submit', id: 'standard-line-item-submit' unless local_assigns[:hide_submit] %>
<% end %>
