<div class="modal fade " id="lineItemModal-<%= job.id %>" tabindex="-1" role="dialog" aria-labelledby="lineItemModalLabel-<%= job.id %>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="lineItemModalLabel-<%= job.id %>">New line item</h4>
            </div>
            <div class="modal-body line-item-form">
                Imprintable?
                <%= radio_button_tag :is_imprintable, 'yes', 'data-id'=>job.id %><%= label_tag :is_imprintable_yes, 'Yes' %>
                <%= radio_button_tag :is_imprintable, 'no', 'data-id'=>job.id %><%= label_tag :is_imprintable_no, 'No' %>
                <div id="line-item-form-<%= job.id %>">
                	<%=  %>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
  </div>
</div>