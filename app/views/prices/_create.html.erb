<div class="col-xs-12 clearfix clear">
  <% if session[:pricing_groups].nil? || session[:pricing_groups].empty? %>
    <div class="alert alert-warning clear">
      Your pricing table is currently empty
    </div>
  <% else %>
  <table class="table table-condensed table-hover">
    <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Sizes</th>
      <th>Base</th>
      <th>2XL</th>
      <th>3XL</th>
      <th>4XL</th>
      <th>5XL</th>
      <th>6XL</th>
    </tr>
    </thead>

    <tbody>
    <% session[:pricing_groups].each do |group, pricing_array| %>
        <tr>
          <td colspan="9"><b>Group:</b> <%= group %></td></tr>
            <% pricing_array.each_with_index do |pricing_hash, index| %>
            <tr id=<%= "price-#{group.to_s.gsub(/\s/, '_')}-#{index}" %>>
              <td><%= link_to(pricing_hash[:name], pricing_hash[:supplier_link]) %></td>
              <td><%= pricing_hash[:quantity] %></td>
              <td><%= pricing_hash[:sizes] %></td>
              <td><%= number_to_currency pricing_hash[:prices][:base_price] %></td>
              <td><%= number_to_currency pricing_hash[:prices][:xxl_price] %></td>
              <td><%= number_to_currency pricing_hash[:prices][:xxxl_price] %></td>
              <td><%= number_to_currency pricing_hash[:prices][:xxxxl_price] %></td>
              <td><%= number_to_currency pricing_hash[:prices][:xxxxxl_price] %></td>
              <td><%= number_to_currency pricing_hash[:prices][:xxxxxxl_price] %></td>
              <td>
                <div id="price_actions_<%= index %>">
                  <%= link_to price_path(id: index, group: group),
                              method: :delete,  remote: true, class: 'btn btn-xs btn-danger',
                              data: {
                                      confirm: 'Are you sure you would like to delete the price?'
                              } do %>
                      <i class="fa fa-times"></i> Remove
                  <% end %>

                  <%= link_to quote_select_quotes_path(index: index, pricing_group: group),
                              class: 'btn btn-xs btn-warning', remote: true do %>
                      <i class="fa fa-plus"></i> Add to Quote
                  <% end %>
                </div>
              </td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>
</div>
<div class="col-xs-12 text-right">
  <%= link_to destroy_all_prices_path, class: 'btn btn-danger',
              data: { confirm: 'Are you sure you want to delete every price?' },
              remote: true do %>
      <i class="glyphicon glyphicon-remove"></i> Delete Pricing Table
  <% end %>

  <%= link_to new_quote_path, class: 'btn btn-success' do %>
      <i class="glyphicon glyphicon-usd"></i> Create Quote from Table
  <% end %>

</div>
  <% end %>
<br clear="all" />
