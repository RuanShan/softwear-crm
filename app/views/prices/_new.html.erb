<div class="box-info full">
  <%= form_tag({ controller: :prices, action: :create }, remote: true) do %>
    <div class="box-info">
      <div class="form-group clearfix">
        <label class="col-sm-4 control-label" for=".">Decoration Price</label>

        <div class="col-sm-8">
          <div class="input-group">
            <span class="input-group-addon">$</span>

            <%= text_field_tag :decoration_price, nil,
                               placeholder: 'Enter decoration price...', class: 'form-control' %>

          </div>
          <p class="help-block">The decoration price of the imprintable</p>
        </div>
      </div>

      <div class="form-group clearfix">
        <label class="col-sm-4 control-label" for=".">Pricing Group</label>

        <div class="col-sm-8">
          <div class="input-group">
            <% session[:prices] = {lolol: true} %>
            <%= select_tag :pricing_group, options_for_select(session[:prices].keys), class: 'chosen-select form-control' %>
          </div>
        </div>

      </div>
    </div>

    <%= hidden_field_tag :id, imprintable.id %>

    <div class="form-group clearfix">
      <div class="col-sm-offset-2 col-sm-8">
        <button type="submit" class="btn btn-info">Fetch Prices!</button>
      </div>
    </div>
  <% end %>
</div>
