<div class="box-info">
  <h2>Search Artwork</h2>
  <%= search_form_for Artwork, class: 'form-horizontal', remote: local_assigns[:remote] do |s| %>
    <% id = artwork_request == nil ? nil : artwork_request.id%>
    <%= s.pass_locals_to_controller artwork_request_id: id %>

    <div class="col-sm-6">
      <%= s.fulltext id: 'js_search', placeholder: 'Keywords' %>
      <%= s.submit class: 'btn-lg btn-block margin-top-10' %>
    </div>

      <div class="col-sm-2">
        <%= link_to 'Clear', '#', class: 'btn btn-primary js-clear-btn' %>
      </div>
  <% end %>
</div>
