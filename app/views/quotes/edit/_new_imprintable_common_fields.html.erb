<h4>Line Item Options</h4>

<div class="row">
  <div class="col-xs-4">
    <%= f.label :job_id, 'Group', for: 'select-existing-group' %><br />
    <%= f.select :job_id, quote.imprintable_jobs.map {|x| [x.name, x.id] }, {}, id: 'select-existing-group', data: { autofill: quantities_and_decoration_prices(quote.imprintable_jobs) } %><br />
  </div>
  <div class="col-xs-4">
    <%= f.label :tier %><br />
    <%= f.select :tier, Imprintable::TIERS.map{|number, name| [name, number]} %><br />
  </div>
  <div class="col-xs-2">
    <%= f.label :quantity, for: 'line-item-quantity' %><br />
    <%= f.text_field :quantity, type: 'number', required: true, id: 'line-item-quantity' %><br />
  </div>
  <div class="col-xs-2">
    <%= f.label :decoration_price, for: 'line-item-decoration-price' %><br />
    <div class="input-group">
      <span class="input-group-addon">$</span>
      <%= f.text_field :decoration_price, type: 'number', step: 'any', required: true, id: 'line-item-decoration-price' %>
    </div>
  </div>
  <%= f.hidden_field :quote_id, value: quote.id %>
</div>
