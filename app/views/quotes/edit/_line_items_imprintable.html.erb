<li id="edit-line-item-<%= line_item.id %>" class="sortable-quote-line-item row">
  <% # batch_fields_for line_item do |f| %>
  <%= f.fields_for line_item do |ff| %>
    <%= ff.hidden_field :tier, class: 'tier-field' %>
    <%= ff.hidden_field :line_itemable_id, class: 'job-id-field' %>

      <div class="col-xs-7">
        <b><%= line_item.imprintable.name %></b><br />
        <%= line_item.imprintable.description.html_safe %><br />
        <%= link_to 'Add Coordinate', '#' %> |  <%= link_to 'Add Similar', '#' %>
      </div>
      <div class="col-xs-2">
        <%= ff.label :decoration_price, 'Quantity' %>
        <%= ff.number_field :quantity, class: 'line-item-edit-field' %>
      </div>
      <div class="col-xs-2">
        <%= ff.label :imprintable_price, 'Imprintable' %>
        <div class='input-group'>
          <span class='input-group-addon'>$</span>
          <%= ff.text_field :imprintable_price, class: 'line-item-edit-field imprintable-price' %>
        </div>

        <%= ff.label :decoration_price, 'Decoration' %>
        <div class='input-group'>
          <span class='input-group-addon'>$</span>
          <%= ff.text_field :decoration_price, class: 'line-item-edit-field decoration-price' %>
        </div>
      </div>
      <div class="col-xs-1">
        <b>Price</b>
        <span class='line-item-total-price'><%= number_to_currency line_item.unit_price %></span>
        <%= link_to 'Remove', '#' %>
      </div>
  <% end %>
</li>
