<div class="line-item-form">
  <div class="li-standard-form">
    <fieldset class="js-removeable">
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :taxable, style: 'width: 34px; height: 34px;' %>
      <%= f.check_box :taxable, checked: true, style: 'width: 34px; height: 34px;' %>

      <%= f.label :quantity %>
      <%= f.number_field :quantity %>

      <%= f.label :unit_price, 'Unit Price' %>
      <%= f.text_field :unit_price %>

      <%= f.label :url, 'URL' %>
      <%= f.text_field :url %>

      <%= f.hidden_field :_destroy %>
      <%= link_to 'Remove Line Item', '#', class: 'js-remove-fields btn' %>
    </fieldset>
  </div>
  <br>
</div>
