<div class='user-profile-content'>
  <%= form_for quote, builder: LancengFormBuilder do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <h3><strong>Customer</strong> Details</h3>

        <%= render 'customer_detail_fields', f: f, quote: quote, email: nil, name: nil %>
      </div>

      <div class="col-sm-6">
        <h3><strong>Quote</strong> Details</h3>

        <%= render 'quote_detail_fields', f: f, quote: quote, quote_request_id: nil %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.submit 'Save', class: 'quote-details input-group' %>
    </div>
  <% end %>
</div>
