<% unless insightly_available? %>
  <h4>You must have a valid Insightly API Key to set these fields.</h4>
<% end %>

<%= f.hidden_field :insightly_whos_responsible_id, value: current_user.id %>

<div class="form-group">
  <%= f.label :insightly_category_id, 'Category' %>
  <%= insightly_select f, :insightly_category_id, insightly_categories %>
</div>

<div class="form-group">
  <%= f.label :insightly_probability, 'Probability of closing order' %>
  <div class="input-group">
    <%= insightly_field f, :text, :insightly_probability %>
    <span class="input-group-addon">%</span>
  </div>
</div>

<div class="form-group">
  <%= f.label :insightly_value, 'Estimated Quote Value' %>
  <div class="input-group">
    <span class="input-group-addon">$</span>
    <%= insightly_field f, :text, :insightly_value%>
  </div>
</div>

<div class="form-group">
  <%= f.label :insightly_pipeline_id, 'Pipeline' %>
  <%= insightly_select f, :insightly_pipeline_id, insightly_pipelines %>
</div>

<div class="form-group">
  <%= f.label :insightly_opportunity_profile_id, 'Customer Profile' %>
  <%= insightly_select f, :insightly_opportunity_profile_id, insightly_opportunity_profiles %>
</div>

<div class="form-group">
  <%= f.label :insightly_bid_amount, 'Bid Amount' %>
  <div class="input-group">
    <span class="input-group-addon">$</span>
    <%= insightly_field f, :text, :insightly_bid_amount %>
  </div>
</div>

<div class="form-group">
  <%= f.label :insightly_bid_tier_id, 'Bid Tier' %>
  <%= insightly_select f, :insightly_bid_tier_id, insightly_bid_tiers %>
</div>

<div class="form-group">
  <%= f.label :insightly_opportunity_id, 'Opportunity ID' %>
  <%= insightly_field f, :text, :insightly_opportunity_id %>
</div>

<% if insightly_error? %>
  <h4>Error accessing Insightly. Is your api key invalid?</h4>
<% end %>
