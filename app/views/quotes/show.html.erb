<div class="box-info full" onload="printPage();">
  <div class="page-heading col-lg-10">
    <h1><strong>Ann Arbor T-Shirt Company</strong> Quote</h1>
  </div>

  <div class="col-sm-1 text-right hidden-print">
    <%= link_to 'Print', '#', class: 'btn btn-default', id: 'print-button' %>
  </div>

  <div class="col-sm-1 text-right hidden-print">
    <%= link_to 'Email Quote', quote_populate_email_path(@quote.id),
                 class: 'btn btn-default' %>
  </div>
</div>

<div class="box-info">
  <div class="col-xs-6">
    <div class="box-info">
      <h2><strong>Customer</strong> Information</h2>

      <div>
        <p><label>Email:</label> <%= @quote.email %></p>
        <p><label>Phone Number:</label> <%= @quote.phone_number %></p>
        <p><label>Name:</label> <%= @quote.full_name %></p>
        <p><label>Company:</label> <%= @quote.company %></p>
        <p><label>Twitter:</label> <%= @quote.twitter %></p>
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <div class="box-info">
      <h2><strong>Quote</strong> Details</h2>

      <div>
        <p><label>Name:</label> <%= @quote.name %></p>
        <p><label>Valid Until:</label> <%= display_time(@quote.valid_until_date) %></p>
        <p><label>Estimated Delivery:</label> <%= display_time(@quote.estimated_delivery_date) %></p>
        <p><label>Salesperson:</label> <%= @quote.salesperson.full_name %></p>
        <p><label>Store:</label> <%= @quote.store.name %></p>
      </div>
    </div>
  </div>
</div>

<div class="box-info">
  <div class="box-info">
    <%= render 'quotes/line_item_information', quote: @quote %>
  </div>
</div>