<div class="box-info full">
  <h1><strong>Ann Arbor T-Shirt Company</strong> Quote</h1>
  <div class="col-sm-6">
    <div class="box-info">
      <h2><strong>Customer</strong> Information</h2>
      <div>
        <p><label>Email:</label> <%= @quote.email %></p>
        <p><label>Phone Number:</label> <%= @quote.phone_number %></p>
        <p><label>First Name:</label> <%= @quote.first_name %></p>
        <p><label>Last Name:</label> <%= @quote.last_name %></p>
        <p><label>Company:</label> <%= @quote.company %></p>
        <p><label>Twitter:</label> <%= @quote.twitter %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="box-info">
      <h2><strong>Quote</strong> Details</h2>
      <div>
        <p><label>Name:</label> <%= @quote.name %></p>
        <p><label>Valid Until Date:</label> <%= @quote.valid_until_date %></p>
        <p><label>Estimated Delivery Date:</label> <%= @quote.estimated_delivery_date %></p>
        <p><label>Salesperson:</label> <%= @quote.salesperson.full_name %></p>
        <p><label>Store:</label> <%= @quote.store.name %></p>
      </div>
    </div>
  </div>
</div>

<div class="box-info full">
  <!-- Line Item Information -->
  <div class="box-info">
    <h2><strong>Line Item</strong> Information</h2>
    <div class="table-responsive container-fluid">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Totals</th>
        </tr>
        </thead>
        <tbody>
          <% @quote.standard_line_items.each do |li| %>
          <tr>
            <td class="col-sm-1"><%= li.name %></td>
            <td class="col-sm-7"><%= li.description %></td>
            <td class="col-sm-1"><%= number_to_currency(li.unit_price) %></td>
            <td class="col-sm-1"><%= li.quantity %></td>
            <td class="col-sm-2"><%= number_to_currency(li.price) %></td>
          </tr>
          <% end %>
        <tr id="subtotal">
          <td></td><td></td><td></td>
          <td><strong>Subtotal:</strong></td>
          <td><%= number_to_currency(@quote.line_items_subtotal) %></td>
        </tr>
        <tr id="tax">
          <td></td><td></td><td></td>
          <td><strong>Tax:</strong></td>
          <td><%= number_to_currency(@quote.line_items_total_tax) %></td>
        </tr>
        <tr id="total">
          <td></td><td></td><td></td>
          <td><strong>Total:</strong></td>
          <td><%= number_to_currency(@quote.line_items_total_with_tax) %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
