<div class="box-info">
  <%= render partial: 'shared/modal_errors', locals: {object: fba_job_template} %>

  <%= bootstrap_form_for fba_job_template do |f| %>
    <div id="horizontal-form" class="collapse in">
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <% if fba_job_template.errors.include?(:name) %>
            <% fba_job_template.errors.full_messages_for(:name).each do |message| %>
              <p class="text-danger"><%= message %></p>
            <% end %>
          <% end %>

          <%= f.text_field :name, class: 'form-control' %>

          <p class="help-block">Unique name for this job template</p>
        </div>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :imprints %>
      <%= link_to new_imprint_path(
        select_tag_name:  'fba_job_template[print_location_ids][]',
        description_name: 'fba_job_template[imprint_descriptions][]'
      ),
        class: 'btn btn-info add-imprint',
        method: :get, remote: true do %>
          <i class="fa fa-pagelines"></i> Add Imprint
      <% end %>

      <div class='well'>
        <div class="col-xs-12">
        </div>
        <div id='new-imprints-container' class='col-xs-12'>
          <% fba_job_template.imprints.each do |imprint| %>
            <%= render 'imprints/imprint',
              imprint_method: imprint.imprint_method,
              imprint: imprint,
              select_tag_name:  'fba_job_template[print_location_ids][]',
              description_name: 'fba_job_template[imprint_descriptions][]'
            %>
          <% end %>
        </div>
        <div class='clearfix'></div>
      </div>
    </div>

    <%= f.submit "#{create_or_edit_text(@fba_job_template)} FBA Job Template", class: 'btn btn-primary' %>
  <% end %>
</div>
