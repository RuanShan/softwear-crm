
<div class="box-info">
<%= form_for shipping_method do |f| %>
  <!-- Horizontal form body -->
      <div id="horizontal-form" class="collapse in">

        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
            <p class="help-block">The name of the shipping method (UPS Ground, for example)</p>
           </div>
        </div>

        <div class="form-group">
          <%= f.label :tracking_url, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :tracking_url, class: 'form-control' %>
            <p class="help-block">URL At which you can enter in a tracking number to track your shipment</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info"><%= create_or_edit_text(shipping_method) %> Shipping Method</button>
          </div>
        </div>

      </div>
<% end %>
</div>