disableFor('.js-new-job', 1000);
$('#refund-form').collapse('hide');

<% if @job.valid? %>
  $('a[href="#jobs"]').click();

  var $newJob = $("<%= j(render partial: 'jobs/job', locals: { job: @job }).html_safe %>");

  $('#jobs').children().last().before($newJob);

  $('.scroll-y').scrollTo($('h3.job-title').last(),{
    duration: 1000,
    offsetTop: 100
  });

  registerJobEvents($newJob);
  updateOrderTimeline();
  initializeEditable();

<% else %>
  
  errorModal("Sorry, looks like the server had trouble creating the job.");

<% end %>
