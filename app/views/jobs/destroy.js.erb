disableFor('#delete-job-<%= @job.id %>', 1000);

<% if @job.destroyed? || @job.jobbable_type == 'Quote' %>

  $("#job-<%= @job.id %>").fadeOut(500, updateOrderTimeline);
  $(".destroy-job-<%= @job.id %>").remove();

<% else %>

  errorModal("<%= j @job.errors.full_messages.join(', ') %>");

<% end %>
