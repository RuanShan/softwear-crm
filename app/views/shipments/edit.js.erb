<% order = (@shipment.shippable_type == 'Job' ? @shipment.shippable.order : @shipment.shippable ) %>

showContentModal({
  title: "<%= @shipment.shipped? ? 'Shipped' : 'Pending' %> Shipment",
  body: $("<%=j render 'shipments/form', shipment: @shipment, order: order %>"),
  footer: $('<button data-dismiss="modal" class="btn btn-standard">Close</button>'),
  then: function() {
    initializeSelect2();
    initializeDateTimePicker();
  }
});
