<div class="box-info">
  <%= render 'shared/modal_errors', object: color %>

  <%= form_for(color) do |f| %>
    <div id="horizontal-form" class="collapse in">
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>
          <p class="help-block">The name of the color</p>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :sku, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :sku, class: 'form-control' %>
          <p class="help-block">SKU of the color</p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :map, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :map, class: 'form-control' %>
          <p class="help-block">Color Map for retail colors. If blank, name will be used as the color map.</p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :hexcode, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div id='color-hexcodes-container' class='row' data-hexcode="<%= escape_once render 'hexcode' %>">
            <% color.hexcodes.each do |hexcode| %>
              <%= render 'hexcode', hexcode: hexcode %>
            <% end %>
            <div class='col-sm-1 end'>
              <%= button_tag '<i class="fa fa-plus"></i>'.html_safe, class: 'btn btn-success btn-sm', id: 'add-hexcode' %>
            </div>
          </div>
          <p class="help-block">HEX value(s) for the color</p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :retail, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <div class="radio">
              <%= f.radio_button :retail, false, value: false %>
              No
          </div>

          <div class="radio">
              <%= f.radio_button :retail, true, value: false %>
              Yes
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-info">
            <%= create_or_edit_text(color) %> Color
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
