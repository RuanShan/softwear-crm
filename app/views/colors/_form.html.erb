
<div class="box-info">
  <%= render partial: 'shared/modal_errors', locals: {object: color} %>
  <%= form_for(color) do |f| %>
      <!-- Horizontal form body -->
      <div id="horizontal-form" class="collapse in">

        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
            <p class="help-block">The name of the color
          </div>
        </div>

        <div class="form-group">
          <%= f.label :sku, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :sku, class: 'form-control' %>
            <p class="help-block">SKU of the color
          </div>
        </div>

        <div class="form-group">
          <%= f.label :retail, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <div class="radio">
                <%= f.radio_button :retail, false, value: false %>
                No
            </div>
            <div class="radio">
                <%= f.radio_button :retail, true, value: false %>
                Yes
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info"><%= create_or_edit_text(color) %> Color</button>
          </div>
        </div>

      </div>
  <% end %>
</div>