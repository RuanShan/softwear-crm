<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="colors_list">
      <thead>
      <tr>
        <th>Name</th>
        <th>Map</th>
        <th>SKU</th>
      </tr>
      </thead>
      <tbody>
      <% colors.each do |color| %>
        <tr id="<%= model_table_row_id color %>">
          <td><%= color.name %></td>
          <td><%= color.map %></td>
          <td><%= color.sku %></td>
          <td>
            <div class="btn-group btn-group-xs">
              <%= link_to edit_color_path(color), class: 'btn btn-default',
                          'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
                <i class="fa fa-edit"></i>
              <% end %>

              <%= link_to color_path(color), class: 'btn btn-default',
                          data: { confirm: 'Are you sure you would like to delete the color?' }, method: :delete,
                          'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
                <i class="fa fa-times"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
