<div class="page-heading animated fadeInDownBig col-lg-9">
  <h1>Colors <small>View and edit colors available for imprintables</small></h1>
</div>

<div class="col-lg-3 text-right">
  <%= link_to 'Add a color', new_color_path, class:'btn btn-primary' %>
</div>

<div class='row'>
  <%= search_form_for Color do |s| %>
    <div class="form-group">
      <div class='col-sm-10'>
        <%= s.fulltext placeholder: 'Search Colors' %>
      </div>
      <div class='col-sm-2'>
        <%= s.submit class: 'btn-lg btn-block margin-top-10' %>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @colors %>

<div class="box-info row clear">
  <%= render 'colors/table', colors: @colors %>
</div>

<%= paginate @colors %>
