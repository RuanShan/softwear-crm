
<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="styles_list">
      <thead>
      <tr>
        <th>Brand Name</th>
        <th>Catalog Number</th>
        <th>Name</th>
        <th>Description</th>
        <th>SKU</th>
      </tr>
      </thead>
      <tbody>
      <% styles.each do |style| %>
          <tr id="<%= model_table_row_id style %>">
            <td><%= style.brand.name %></td>
            <td><%= style.catalog_no %></td>
            <td><%= style.name %></td>
            <td><%= style.description %></td>
            <td><%= style.sku %></td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to edit_style_path(style), 'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit', class: 'btn btn-default' do %><i class="fa fa-edit"></i><% end %>
                <%= link_to style_path(style), 'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy', class: 'btn btn-default', method: :delete, data: {confirm: 'Are you sure you would like to delete the style?'} do %><i class="fa fa-times"></i><% end %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
