
<div class="box-info">
  <%= render partial: 'shared/modal_errors', locals: {object: style} %>
  <%= form_for style do |f| %>
      <!-- Horizontal form body -->
      <div id="horizontal-form" class="collapse in">

        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if style.errors.include?(:name) %>
                <% style.errors.full_messages_for(:name).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :name, class: 'form-control' %>
            <p class="help-block">The name of the style
          </div>
        </div>

        <div class="form-group">
          <%= f.label :catalog_no, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if style.errors.include?(:catalog_no) %>
                <% style.errors.full_messages_for(:catalog_no).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :catalog_no, class: 'form-control' %>
            <p class="help-block">The catalog number of the style
          </div>
        </div>

        <div class="form-group">
          <%= f.label :description, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if style.errors.include?(:description) %>
                <% style.errors.full_messages_for(:description).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :description, class: 'form-control' %>
            <p class="help-block">The description of the style
          </div>
        </div>

        <div class="form-group">
          <%= f.label :sku, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if style.errors.include?(:sku) %>
                <% style.errors.full_messages_for(:sku).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :sku, class: 'form-control' %>
            <p class="help-block">SKU for this style</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info"><%= create_or_edit_text(style) %> Style</button>
          </div>
        </div>

      </div>
  <% end %>
</div>