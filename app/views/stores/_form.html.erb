

<%= bootstrap_form_for store do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :address_1 %>
  <%= f.text_field :address_2 %>
  <%= f.text_field :city %>
  <%= f.text_field :state %>
  <%= f.text_field :zipcode %>
  <%= f.text_field :country %>
  <%= f.text_field :phone %>
  <%= f.text_field :sales_email %>
  <%= f.fields_for :logo, multipart: true do |ff| %>
    <%= ff.file_field :file, label: 'Logo' %>
    <%= ff.text_field :description, label: 'Alternate text' %>
  <% end %>
  <%= f.submit  class: 'btn btn-info' %>
<% end %>
