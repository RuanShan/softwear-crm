
<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="stores_list">
      <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% stores.each do |store| %>
      <tr id="<%= model_table_row_id store %>">
        <td><%= store.name %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <%= link_to edit_store_path(store), 'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit', class: 'btn btn-default' do %><i class="fa fa-edit"></i><% end %>
            <%= link_to store_path(store), 'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy', class: 'btn btn-default', method: :delete, data: {confirm: 'Are you sure you would like to delete the store?'} do %><i class="fa fa-times"></i><% end %>
          </div>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
