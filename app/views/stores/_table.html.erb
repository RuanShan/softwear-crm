<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="stores_list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% stores.each do |store| %>
        <tr id="<%= model_table_row_id store %>">
          <td><%= store.name %></td>
          <td class='store-address'><%= store.address_array.join("<br />") %><br />
            <%= store.phone %> - <%= store.sales_email %>
          </td>
          <td>
            <div class="btn-group btn-group-xs">
              <%= link_to edit_store_path(store), class: 'btn btn-default',
                          'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
                <i class="fa fa-edit"></i>
              <% end %>

              <%= link_to store_path(store), class: 'btn btn-default',
                          data: {confirm: 'Are you sure you would like to delete the store?'},
                          method: :delete, 'data-action' => 'destroy',
                          'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
                <i class="fa fa-times"></i>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
