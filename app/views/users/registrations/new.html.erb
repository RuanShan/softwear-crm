<div class='box-info'>

  <h2>Create new user</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: LancengFormBuilder) do |f| %>
    <%= render_error_modal_for resource %>

    <div class='form-group'>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class='form-group'>
      <%= f.label :firstname, 'First name' %>
      <%= f.text_field :firstname %>
    </div>
    <div class='form-group'>
      <%= f.label :lastname, 'Last name' %>
      <%= f.text_field :lastname %>
    </div>

    <div class='form-group'>
    <%= f.submit "Create", confirm: "Are you sure you'd like to create this account?" %>
    </div>
  <% end %>

</div>