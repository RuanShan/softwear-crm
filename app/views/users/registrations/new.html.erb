<div class='box-info'>

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: LancengFormBuilder) do |f| %>
    <%= devise_error_messages! %>

    <div class='form-group'><%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %></div>

    <div class='form-group'>
    <%= f.label :firstname, 'First name' %>
    <%= f.text_field :firstname %>
    </div>
    <div class='form-group'>
    <%= f.label :lastname, 'Last name' %>
    <%= f.text_field :lastname %>
    </div>

    <div class='form-group'><%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %></div>

    <div class='form-group'><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

    <div class='form-group'><%= f.submit "Sign up" %></div>
  <% end %>

  <%= render "users/shared/links" %>

</div>