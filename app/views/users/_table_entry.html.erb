<tr id="user_<%= user.id %>">
  <td><%= user.id %></td>
  <td>
    <%= user.firstname %> <%= user.lastname %>
  </td>
  <td>
    <%= user.email %>
  </td>
  <td>
    <div class='btn-group btn-group-xs'>
      <%= link_to edit_user_path(user), 'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit', class: 'btn btn-default' do %>
        <i class='fa fa-edit'></i>
      <% end %>
      <%= link_to user_path(user), 'data-action' => 'delete', 'data-toggle' => 'tooltip', 'title' => 'Delete', class: 'btn btn-default', method: :delete, data: { confirm: "Delete #{user.firstname}'s account?" } do %>
        <i class='fa fa-times'></i>
      <% end %>
    </div>
  </td>
</tr>