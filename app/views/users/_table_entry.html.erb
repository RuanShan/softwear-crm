<tr id="user_<%= user.id %>">
  <td><%= user.id %></td>
  <td><%= profile_picture_of user, class: 'half-width' %></td>
  <td><%= user.first_name %> <%= user.last_name %></td>
  <td><%= user.email %></td>
  <td>
    <div class='btn-group btn-group-xs'>
      <%= link_to edit_user_path(user), class: 'btn btn-default',
                  'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
        <i class='fa fa-edit'></i>
      <% end %>

      <%= link_to user_path(user), class: 'btn btn-default',
                  data: { confirm: "Delete #{user.first_name}'s account?" },
                  method: :delete, 'data-action' => 'delete',
                  'data-toggle' => 'tooltip', 'title' => 'Delete' do %>
        <i class='fa fa-times'></i>
      <% end %>
    </div>
  </td>
</tr>
