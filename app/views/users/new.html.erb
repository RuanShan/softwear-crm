<div class="page-heading animated fadeInDownBig">
  <h1>Users <small>Create a new user</small></h1>
</div>

<div class='box-info row clear'>
  <%= form_for(@user, url: { action: 'create' }, builder: LancengFormBuilder) do |f| %>
    <%= render_error_modal_for @user %>

    <%= render partial: 'users/fields', locals: { f: f } %>

    <div class='form-group'>
    <%= f.submit 'Create' %>
    </div>
  <% end %>
</div>