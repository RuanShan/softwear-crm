<div class="box-info">
 <%= render partial: 'shared/modal_errors', locals: {object: imprintable_group} %>

  <%= form_for imprintable_group do |f| %>
        <div id="horizontal-form" class="collapse in">
          <div class="form-group">
            <%= f.label :name, class: 'col-sm-2 control-label' %>

            <div class="col-sm-10">
              <% if imprintable_group.errors.include?(:name) %>
                <% imprintable_group.errors.full_messages_for(:name).each do |message| %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              <% end %>

              <%= f.text_field :name, class: 'form-control' %>

              <p class="help-block">The name of the imprintable group</p>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, class: 'col-sm-2 control-label' %>

            <div class="col-sm-10">
              <% if imprintable_group.errors.include?(:description) %>
                  <% imprintable_group.errors.full_messages_for(:description).each do |message| %>
                      <p class="text-danger"><%= message %></p>
                  <% end %>
              <% end %>

              <%= f.text_area :description, class: 'form-control' %>

              <p class="help-block">The description of the imprintable group</p>
            </div>
          </div>

          <div class="form-group row">
            <div class='col-sm-1'>
              <%= f.label :imprintables %>
            </div>

            <div class='col-sm-11'>
              <%= f.fields_for :imprintable_imprintable_groups do |ff| %>
                <%= render 'imprintable_imprintable_group_fields', f: ff %>
              <% end %>

              <%= link_to_add_fields "<i class='fa fa-plus'></i> Add Imprintable".html_safe, f, :imprintable_imprintable_groups %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-info"><%= create_or_edit_text(imprintable_group) %> Imprintable Group</button>
            </div>
          </div>
        </div>
  <% end %>
</div>
