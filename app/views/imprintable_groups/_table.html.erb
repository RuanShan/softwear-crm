<div class="box-info full" id='imprintable-groups-list'>
  <div>
    <%= text_field_tag :filter_groups, '', placeholder: 'Filter', class: 'form-control fuzzy-search' %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover" id="imprintable_groups_list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody id='imprintable_groups_table_body' class='list'>
        <% imprintable_groups.each do |imprintable_group| %>
          <tr id="<%= model_table_row_id imprintable_group %>">
            <td data-id="<%= imprintable_group.id %>" class='imprintable-group'><%= imprintable_group.name %></td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to edit_imprintable_group_path(imprintable_group),
                            class: 'btn btn-default', 'data-action' => 'edit',
                            'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to imprintable_group_path(imprintable_group),
                            class: 'btn btn-default',
                            data: {confirm: 'Are you sure you would like to delete the imprintable group?'},
                            method: :delete, 'data-action' => 'destroy',
                            'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
                  <i class="fa fa-times"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
