<div class="box-info">
  <h2><strong>Basic</strong> Information</h2>
  <div>
    <div class="form-group clearfix">
      <%= f.label :brand_id, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.select :brand_id,
                     @model_collection_hash[:brand_collection],
                     prompt: 'Select a brand' %>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :style_name, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :style_name, class: 'form-control' %>

        <p class="help-block">The name of the style</p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :style_catalog_no, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :style_catalog_no, class: 'form-control' %>

        <p class="help-block">The catalog number of the style</p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :sku, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :sku, class: 'form-control' %>

        <p class="help-block">SKU for this style</p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :retail, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <div class="radio">
          <%= f.radio_button :retail, false, value: false %>
          No
        </div>

        <div class="radio">
          <%= f.radio_button :retail, true, value: false %>
          Yes
        </div>

        <p class="help-block">Select if the style is retail</p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :style_description, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_area :style_description, class: 'summernote' %>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :standard_offering,
                  'Standard Offering',
                  class: 'col-sm-4 control-label' %>
      <%= f.error_for :standard_offering %>
      <div class="col-sm-8">
        <%= f.check_box  :standard_offering,
                         { class: 'checkbox' },
                         'true',
                         'false' %>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :material, class: 'col-sm-4 control-label' %>
      <%= f.error_for :material %>
      <div class="col-sm-8">
        <%= f.text_field :material, class: 'form-control' %>

        <p class="help-block">The material</p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :weight, class: 'col-sm-4 control-label' %>
      <%= f.error_for :weight %>
      <div class="col-sm-8">
        <%= f.text_field :weight, class: 'form-control' %>

        <p class="help-block">The material weight</p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :max_imprint_width, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <div class="input-group">
          <%= f.error_for :max_imprint_width %>
          <%= f.text_field :max_imprint_width,
                           class: 'form-control',
                           placeholder: 'Width (0.00) in inches' %>

          <span class='input-group-addon'>inches</span>
        </div>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :max_imprint_height, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <div class="input-group">
          <%= f.error_for :max_imprint_height %>
          <%= f.text_field :max_imprint_height,
                           class: 'form-control',
                           placeholder: 'Height (0.00) in inches' %>

          <span class='input-group-addon'>inches</span>
        </div>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :tag_list,
                  'Tags (separated by commas)',
                  class: 'col-sm-4 control-label' %>
      <%= f.error_for :tag_list %>
      <div class="col-sm-8">
        <%= f.text_field :tag_list %>

        <p class="help-block">
          Tags are additional searchable characteristics or 'keywords'
        </p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :sample_location_ids,
                  'Sample Locations',
                  class: 'col-sm-4 control-label' %>
      <%= f.error_for :sample_location_ids %>
      <div class="col-sm-8">
        <%= f.collection_select :sample_location_ids,
                                @model_collection_hash[:store_collection],
                                :id,
                                :name,
                                {},
                                {
                                    class: 'chosen-select',
                                    data: { placeholder: 'Select sample locations' },
                                    multiple: true
                                } %>

        <p class="help-block">
          Stores at which there is a sample of the imprintable
        </p>
      </div>
    </div>

    <div class="form-group clearfix">
      <%= f.label :coordinate_ids, 'Coordinates', class: 'col-sm-4 control-label' %>
      <%= f.error_for :coordinate_ids %>
      <div class="col-sm-8">
        <%= f.collection_select :coordinate_ids,
                                @model_collection_hash[:imprintable_collection],
                                :id,
                                :name,
                                {},
                                {
                                    class: 'chosen-select',
                                    data: { placeholder: 'Select coordinates' },
                                    multiple: true
                                } %>

        <p class="help-block">
          Coordinate imprintables i.e. a ladies or youth version
        </p>
      </div>
    </div>
  </div>
</div>