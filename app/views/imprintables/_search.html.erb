<div class="row">
  <%= search_form_for Imprintable do |s| %>
    <div class="col-sm-3">
      <%= s.select :sizing_category, Imprintable::SIZING_CATEGORIES, id: 'filter_sizing_category' %>
    </div>
    <div class="col-sm-2">
    <%= s.label :standard_offering %>
    <%= s.yes_or_no :standard_offering %>
    </div>
    <div class="col-sm-3">
      <%= s.fulltext :name, id: 'imprintables_search' %>
    </div>
    <%= s.submit %>
    <%= params[:search] %>
  <% end %>
</div>