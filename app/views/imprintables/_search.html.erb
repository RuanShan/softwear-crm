<%= search_form_for Imprintable, class: 'form-horizontal' do |s| %>

    <div class="form-group">
      <div class="col-sm-12">
        <%= s.fulltext id: 'js_search', placeholder: 'Search Terms', class: 'form-control' %>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-4">
        <%= s.select :all_categories, ImprintableCategory::VALID_CATEGORIES, placeholder: "All categories...",
                      class: 'form-control clearable' %>
      </div>
      <div class="col-sm-4">
        <%= s.select :sizing_category, Imprintable::SIZING_CATEGORIES, placeholder: "Sizing category...",
                     id: 'filter_sizing_category', class: 'clearable' %>
      </div>
      <div class="col-sm-4">
        <%= s.yes_or_no_select :standard_offering, placeholder: "Standard offering...", class: 'clearable' %>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-4">
        <%= s.select :compatible_print_methods, ImprintMethod.all.pluck(:name),
                     placeholder: 'Compatible with...', class: 'form-control clearable' %>
      </div>
      <div class="col-sm-4">
        <%= s.yes_or_no_select :retail, placeholder: "Retail?", class: 'clearable' %>
      </div>
      <div class="col-sm-4">
        <%= s.yes_or_no_select :discontinued, placeholder: "Discontinued?", class: 'clearable' %>
      </div>
    </div>
    <div class="row form-group">
      <div class='col-sm-4'>
        <%= s.text_field :created_at, greater_than: true, placeholder: 'Created After...', class: 'clearable js-datetimepicker' %>
      </div>
    </div>


    <div class="form-group text-right">

      <%= s.save class: 'btn btn-primary' do %>
          <i class="glyphicon glyphicon-floppy-save"></i> Save
      <% end %>


      <%= link_to '#', class: 'btn btn-warning js-clear-btn' do  %>
        <i class="glyphicon glyphicon-refresh"></i> Clear
      <% end %>

      <%= button_tag class: 'btn btn-success' do %>
          <i class="glyphicon glyphicon-search"></i> Search
      <% end %>
    </div>
<% end %>


<div class="form-group">
  <div class="col-sm-9">
    <%= select_search_queries Imprintable, 'data-go' => 'query-go-spot' %>
  </div>
  <div id="query-go-spot" class="col-sm-3">

  </div>
</div>
