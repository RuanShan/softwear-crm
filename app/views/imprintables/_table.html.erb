<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="imprintables_list">
      <thead>
        <tr>
          <th>Standard Offering</th>
          <th>Imprintable</th>
          <th>Description</th>
          <th id="actions" >Actions</th>
        </tr>
      </thead>
      <tbody>
        <% imprintables.each do |imprintable| %>
          <tr id="<%= model_table_row_id imprintable %>">
            <td>
              <% if imprintable.standard_offering? %>
                <i class="fa fa-check-square"></i>
              <% end %>
            </td>
            <td><%= imprintable_modal(imprintable) %></td>
            <td><%= raw imprintable.style_description %></td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to new_price_path(id: imprintable.id), class: 'btn btn-default',
                            id: "pricing_button_#{imprintable.id}", remote: true,
                            'data-action' => 'new', 'data-toggle' => 'tooltip', 'title' => 'Price' do %>
                  <i class="fa fa-dollar"></i>
                <% end %>

                <%= link_to edit_imprintable_path(imprintable), class: 'btn btn-default',
                            'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to imprintable_path(imprintable), class: 'btn btn-default',
                            'data-action' => 'show', 'data-toggle' => 'tooltip', 'title' => 'Show' do %>
                  <i class="fa fa-eye"></i>
                <% end %>

                <%= link_to imprintable_path(imprintable), class: 'btn btn-default',
                            data: { confirm: 'Are you sure you would like to delete the imprintable?', method: :delete },
                            'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
                  <i class="fa fa-times"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
