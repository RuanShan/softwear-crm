<div class="box-info full">
    <div class="table-responsive">
    <table class="table table-hover" id="imprintables_list">
      <thead>
      <tr>
        <th>Name</th>
        <th>Catalog Number</th>
        <th>Description</th>
        <th>Brand</th>
        <th>Style</th>
        <th>Flashable</th>
        <th>Special Considerations</th>
        <th>Polyester</th>
      </tr>
      </thead>
      <tbody>
      <% @imprintables.each do |imprintable| %>
      <tr id="<%= model_table_row_id imprintable %>">
        <td><%= imprintable.name %></td>
        <td><%= imprintable.style.catalog_no %></td>
        <td><%= imprintable.style.description %></td>
        <td><%= imprintable.brand.name %></td>
        <td><%= imprintable.style.name %></td>
        <td><%= imprintable.flashable %></td>
        <td><%= imprintable.special_considerations %></td>
        <td><%= imprintable.polyester %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <%= link_to edit_imprintable_path(imprintable), 'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit', class: 'btn btn-default' do %><i class="fa fa-edit"></i><% end %>
            <%= link_to imprintable_path(imprintable), 'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy', class: 'btn btn-default', method: :delete, data: {confirm: 'Are you sure you would like to delete the imprintable?'} do %><i class="fa fa-times"></i><% end %>
          </div>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
