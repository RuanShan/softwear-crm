<div class="page-heading animated fadeInDownBig col-lg-9">
  <h1><%= @imprintable.brand.name %> - <%=@imprintable.style_catalog_no %><small> <%= @imprintable.style_name %></small></h1>
</div>

<div class="col-lg-3 text-right">
  <%= link_to 'Edit Imprintable', edit_imprintable_path(@imprintable.id), class:'btn btn-primary' %>
</div>

<% if @imprintable.standard_offering %>
    <div class="col-sm-12 alert alert-info" id="standard_product_notice">
      This Imprintable is part of the Standard Product Set
    </div>
<% end %>

<div class="row">
  <div class="col-sm-12">
    <div class="box-info full">

      <ul class="nav nav-tabs nav-justified">
        <li class="active">
          <a href="#sales_info_<%= @imprintable.id %>" data-toggle="tab">
            <i class="fa fa-check-square-o"></i> Sales
          </a>
        </li>
        <li>
          <a href="#production_info_<%= @imprintable.id %>" data-toggle="tab">
            <i class="fa fa-check-square-o"></i> Production
          </a>
        </li>
        <li>
          <a href="#sizing_info_<%= @imprintable.id %>" data-toggle="tab">
            <i class="fa fa-search"></i> Sizing
          </a>
        </li>
        <% if @imprintable.retail? %>
        <li>
          <a href="#retail_info_<%= @imprintable.id %>" data-toggle="tab">
            <i class="fa fa-check-square-o"></i> Retail
          </a>
        </li>
        <% end %>
      </ul>

      <div class="tab-content">

        <div class="tab-pane animated fadeInRight active" id="sales_info_<%= @imprintable.id %>">
          <%= render 'imprintables/show/sales', imprintable: @imprintable %>
        </div>


        <div class="tab-pane animated fadeInRight" id="production_info_<%= @imprintable.id %>">
          <%= render 'imprintables/show/production', imprintable: @imprintable %>
        </div>

        <div class="tab-pane animated fadeInRight" id="sizing_info_<%= @imprintable.id %>">
          <%= render 'imprintables/show/sizing',
                      imprintable: @imprintable,
                      size_variants: @variants_hash[:size_variants],
                      color_variants: @variants_hash[:color_variants],
                      variants_array: @variants_hash[:variants_array] %>
        </div>

        <% if @imprintable.retail? %>
            <div class="tab-pane animated fadeInRight" id="retail_info_<%= @imprintable.id %>">
              <%= render 'imprintables/show/retail', imprintable: @imprintable %>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
