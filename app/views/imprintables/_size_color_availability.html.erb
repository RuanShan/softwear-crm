<style>
  .fa.fa-check-square {
    color: #00c700;
    font-size: 1.5em;
    text-shadow: 1px 1px 1px #ccc
  }
</style>
<div class="user-profile-content">
  <div class="box-info full">
    <div class="table-scroll" style="position: relative; overflow: hidden; width: auto; height: 300px;">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <% Size.all.each do |s| %>
                <th><%= s.display_value %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
          <% Color.all.sort! { |x,y| x.name <=> y.name }.each do |c| %>
            <tr>
              <td><%= c.name %></td>
              <% Size.all.each do |s| %>
                <% v = variants_array.find { |v| (v.color_id == c.id) && (v.size_id == s.id) } %>
                  <td><% if v %><i class="fa fa-check-square"></i><% end %></td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
