<div class="col-sm-12 alert alert-info" id="standard_product_notice">
  <%= t('imprintables_variant_select_html') %>
</div>

<div class="form-group">
  <div class="form-group clearfix">
    <%= f.label :color_ids, 'Colors', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= collection_select 'color', 'ids', model_collection_hash[:all_colors],
                            :id, :name, {}, { multiple: true } %>
    </div>
  </div>

  <div class="form-group clearfix">
    <%= f.label :size_ids, 'Sizes', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= collection_select 'size', 'ids', model_collection_hash[:all_sizes],
                            :id, :name, {}, { multiple: true } %>
    </div>
  </div>
</div>