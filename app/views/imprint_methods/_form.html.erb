<div class="box-info">
  <%= render partial: 'shared/modal_errors', locals: {object: imprint_method} %>
  <%= form_for imprint_method do |f| %>
      <!-- Horizontal form body -->
      <div id="horizontal-form" class="collapse in">

        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if imprint_method.errors.include?(:name) %>
                <% imprint_method.errors.full_messages_for(:name).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :name, class: 'form-control' %>
            <p class="help-block">The name of the imprint method (Embroidery, for example)</p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :production_name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if imprint_method.errors.include?(:production_name) %>
                <% imprint_method.errors.full_messages_for(:production_name).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :production_name, class: 'form-control' %>
            <p class="help-block">The production name of the imprint method (Digital In-House, for example)</p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :ink_colors, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if imprint_method.errors.include?(:ink_colors) %>
                <% imprint_method.errors.full_messages_for(:ink_colors).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>

            <%= f.fields_for :ink_colors do |ff| %>
               <%= render partial: 'ink_color_fields', locals: {f: ff} %>
            <% end %>
            <%= link_to_add_fields "Add Ink color", f, :ink_colors %>
            <p class="help-block">The ink colors (wavelengths from about 400 to 700 nm, for example)</p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :print_locations, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if imprint_method.errors.include?(:print_locations) %>
                <% imprint_method.errors.full_messages_for(:print_locations).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>

            <%= f.fields_for :print_locations do |ff| %>
                <%= render partial: 'print_location_fields', locals: {f: ff} %>
            <% end %>
            <%= link_to_add_fields "Add Print Location", f, :print_locations %>
            <p class="help-block">The location and size of the print</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info"><%= create_or_edit_text(imprint_method) %> Imprint Method</button>
          </div>
        </div>

      </div>
  <% end %>
</div>