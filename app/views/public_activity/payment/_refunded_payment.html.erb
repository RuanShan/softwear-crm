<% if activity.trackable_type %>
  <p>
  Refunded payment of <%= activity.trackable.try(:amount) || '$<unknown>' %>
  <% if activity.recipient && activity.recipient != activity.trackable %>
    to
    <%= activity.recipient_type.underscore.humanize.downcase %>
    <%= link_to activity.recipient.name, activity.recipient %>
  <% end %>
  because
  <%= activity.trackable.refund_reason %>
  </p>

  <% if (p = activity.parameters) && p['refund_amount'] %>
  <p>
    Amount refunded: <%= number_to_currency(p['refund_amount']) %>
  </p>
  <% end %>
<% else %>
  Added something...
<% end %>


