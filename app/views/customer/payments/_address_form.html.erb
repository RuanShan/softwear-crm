<div>
  <%= link_to 'hide address fields', 'javascript:toggleAddressFields()', id: 'toggle-address-fields' %>

  <div class='address_autocomplete_container hidden form-group'>
    <%= label_tag "address_autocomplete", "Billing Address" %>
    <%= text_field_tag "address_autocomplete", "", placeholder: "Full Address", class: 'form-control' %>
    <%= init_address_autocomplete %>
  </div>

  <div class='individual-address-fields row form-group'>
    <div class='col-sm-12'>
      <%= f.text_field :address1, class: "address-name" %>
    </div>
    <div class='col-sm-6'>
      <%= f.text_field :city, class: "address-locality" %>
    </div>
    <div class='col-sm-6'>
      <%= f.text_field :state, class: "address-administrative_area_level_1", data: { name: :short } %>
    </div>
    <div class='col-sm-8'>
      <%= f.text_field :country, class: "address-country", data: { name: :short } %>
    </div>
    <div class='col-sm-4'>
      <%= f.text_field :zipcode, class: "address-postal_code" %>
    </div>
  </div>
</div>
