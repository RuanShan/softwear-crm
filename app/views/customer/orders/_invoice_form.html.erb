<%= bootstrap_form_for order, url: customer_order_path(order), remote: true do |f| %>
  <%= f.form_group :invoice_state, label: { text: 'Do you approve?' } do %>
    <%= f.radio_button :invoice_state, 'approved',
      label: "I approve of this invoice and acknowledge that my approval puts this order into production, and changes after this time may cause delays or additional charges to the order", checked: true %>

    <%= f.radio_button :invoice_state, 'pending', label: "I disapprove of the invoice", checked: false %>
  <% end %>
<% end %>
