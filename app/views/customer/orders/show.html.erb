<div class="container">
  <div class="logo-brand header sidebar rows  hidden-print">
    <div class="logo">
      <h1>
        <%= image_tag 'logo.png', alt: 'SoftWEAR' %> SoftWEAR
      </h1>
    </div>
  </div>

  <div class="left side-menu hidden-print">

    <div class="body rows">
      <div class="sidebar-order-info">
        <h3>Order #<%= @order.id %></h3>
        <dl>
          <dt>Payment State:</dt>
          <dd id='order-payment-status'><%= @order.payment_status.humanize %></dd>
          <dt id='order-invoice-state'>Invoice State:</dt>
          <dd><%= @order.invoice_state.humanize %></dd>
        </dl>
      </div>
      <br clear="all" />

      <div class="sidebar-inner slimscroller">
        <%= render partial: 'customer/shared/sidebar_menu' %>
      </div>
    </div>
  </div>

  <div class="right content-page">
    <div class="header content rows-content-header hidden-print">
      <button class="button-menu-mobile show-sidebar">
        <i class="fa fa-bars"></i>
      </button>
      <div class="navbar navbar-default" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <i class="fa fa-angle-double-down"></i>
            </button>
          </div>
          <div class="navbar-collapse collapse">
          </div>
        </div>
      </div>
    </div>

    <div class="body content rows scroll-y">
      <%= render 'orders/show' %>
      <%= render 'shared/footer' %>
    </div>
  </div>
</div>
