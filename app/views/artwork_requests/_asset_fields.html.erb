<div class="js-removeable clearfix">
  <div class="col-xs-11">
    <br clear="all"/>
    <div class="form-group">
      <div class="row">
        <%= f.label :file, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <%= (f.object.file_file_name.nil?) ? (f.file_field :file) : (f.object.file_file_name) %>
        </div>
      </div>

      <% if f.object.errors.include?(:file) %>
        <% f.object.errors.full_messages_for(:file).each do |message| %>
          <p class="text-danger"><%= message %></p>
        <% end %>
      <% end %>
    </div>

    <div class="form-group">
      <div class="row">
        <%= f.label :description, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control',
                          placeholder: 'The description of the attached file' %>
        </div>
      </div>

      <% if f.object.errors.include?(:description) %>
        <% f.object.errors.full_messages_for(:description).each do |message| %>
          <p class="text-danger"><%= message %></p>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-xs-1">
    <%= f.hidden_field :_destroy %>

    <%= link_to 'x', '#', class: 'btn btn-danger js-remove-fields pull-right' %>
  </div>

  <br clear="all">
  <hr>
</div>
