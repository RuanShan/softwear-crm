<td><%= ArtworkRequest::PRIORITIES[artwork_request.priority.to_i] %></td>
<td><%= link_to artwork_request.jobs.first.order.name, edit_order_path("#{artwork_request.jobs.first.order.id}/#artwork") %></td>
<td><%= display_time(artwork_request.deadline) %></td>
<td><%= display_time(artwork_request.jobs.first.order.in_hand_by) %></td>
<td><%= artwork_request.total_quantity %></td>
<td><%= artwork_request.imprint_methods.pluck(:name).join(', ') %></td>
<td><%= artwork_request.ink_colors.count %></td>
<td><%= artwork_request.jobs.first.order.payment_status %></td>
<td>
  <div class="btn-group btn-group-xs">
    <%= link_to edit_order_artwork_request_path(artwork_request.jobs.first.order, artwork_request),
                class: 'btn btn-default', remote: true,
                'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
      <i class="fa fa-edit"></i>
    <% end %>

    <%= link_to "#{order_artwork_request_path(artwork_request.jobs.first.order, artwork_request)}?disable_buttons=true",
                class: 'btn btn-default', remote: true,
                'data-toggle' => 'tooltip', 'title' => 'Show' do %>
      <i class="fa fa-eye"></i>
    <% end %>

    <%= link_to order_artwork_request_path(artwork_request.jobs.first.order, artwork_request),
                class: 'btn btn-default', method: :delete, remote: true,
                'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
      <i class="fa fa-times"></i>
    <% end %>
  </div>
</td>
