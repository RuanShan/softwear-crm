<div class="box-info full">
  <div class="table-responsive">
    <table data-sortable class="table" id="artwork-request-table">
      <thead>
      <tr>
        <th>Priority</th>
        <th>Order Name</th>
        <th>Artwork Request Deadline</th>
        <th>Order In Hand By Date</th>
        <th>No. of Pieces</th>
        <th>Imprint Method</th>
        <th>Ink Color Count</th>
        <th>Payment Status</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>

      <% artwork_requests.where(artist_id: @current_user.id).each do |ar| %>
          <tr id="artwork-request-row-<%= ar.id %>">
          <%= render partial: 'row', locals: {ar: ar} %>
          </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>