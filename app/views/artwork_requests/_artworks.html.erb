<div class="col-sm-4 artwork-request-artworks-info">
  <h4 class="artwork-title">Artwork</h4>
  <dl>
    <% artwork_request.artworks.each do |artwork| %>
      <dt>Name:</dt>
      <dd><%= artwork.name %></dd>
      <dd><%= image_tag artwork.preview.file.url(:medium) %></dd>
      <dt>Description:</dt>
      <dd><%= artwork.description %></dd>
      <dt>Created By:</dt>
      <dd><%= artwork.artist.full_name %></dd>

      <%= link_to artwork_request_path(artwork_id: artwork.id, id: artwork_request.id, remove_artwork: true), class: 'btn btn-danger', method: :put, remote: true  do %>
        Remove
      <% end %>
      <br>
    <% end %>
  </dl>
</div>