<%= search_form_for ArtworkRequest, class: 'form-horizontal' do |s| %>
  <div class="form-group artwork-request-search-fulltext">
    <div class='col-sm-12'>
      <%= s.fulltext id: 'js_search', placeholder: 'Search Terms', class: 'form-control' %>
    </div>
  </div>

  <div class='row form-group'>
    <div class='col-sm-4'>
      <%= s.select :artwork_state, ArtworkRequest.state_machine.states.map{|x| [x.human_name.humanize, x.name] }, multiple: true, class: "clearable" %>
    </div>
    
    <div class='col-sm-4'>
      <%= s.text_field :deadline, greater_than: true, placeholder: 'Deadline after...', class: 'js-datetimepicker clearable' %>
    </div>

    <div class='col-sm-4'>
      <%= s.text_field :deadline, less_than: true, placeholder: 'Deadline before...', class: 'js-datetimepicker clearable' %>
    </div>

  </div>

  <div class='row form-group'>
    <div class='col-sm-4'>
      <%= s.select :artist_full_name, User.all.map{|x| x.full_name }, multiple: true, class: "clearable" %>
    </div>

    <div class='col-sm-4'>
      <%= s.text_field :order_in_hand_by, greater_than: true, placeholder: 'Order Deadline after...', class: 'js-datetimepicker clearable' %>
    </div>

    <div class='col-sm-4'>
      <%= s.text_field :order_in_hand_by, less_than: true, placeholder: 'Order Deadline before...', class: 'js-datetimepicker clearable' %>
    </div>
  </div>

  <div class="col-sm-2">
    <%= s.save %>
  </div>

  <div class="col-sm-2">
    <%= link_to 'Clear', '#', class: 'btn btn-primary js-clear-btn' %>
  </div>

  <div class="col-sm-6">
    <%= s.submit class: 'btn-lg btn-block margin-top-10' %>
  </div>
<% end %>

<div class="col-sm-3">
  <%= select_search_queries ArtworkRequest %>
</div>
