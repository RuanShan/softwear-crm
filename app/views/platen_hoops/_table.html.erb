<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="platen_hoops_list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Max width</th>
          <th>Max height</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% platen_hoops.each do |platen_hoop| %>
          <tr id="<%= model_table_row_id platen_hoop %>">
            <td><%= platen_hoop.name %></td>
            <td><%= platen_hoop.max_width %> in.</td>
            <td><%= platen_hoop.max_height %> in.</td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to edit_platen_hoop_path(platen_hoop),
                            class: 'btn btn-default', 'data-action' => 'edit',
                            'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to platen_hoop_path(platen_hoop),
                            class: 'btn btn-default',
                            data: {confirm: 'Are you sure you would like to delete the platen/hoop?'},
                            method: :delete, 'data-action' => 'destroy',
                            'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
                  <i class="fa fa-times"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
