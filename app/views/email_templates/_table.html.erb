<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="email_templates_list">
      <thead>
      <tr>
        <th>Name</th>
        <th>Template Type</th>
        <th>Email Details</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% email_templates.each do |email_template| %>
        <tr id="<%= model_table_row_id email_template %>">
          <td><%= email_template.name %></td>
          <td><%= email_template.template_type %></td>
          <td>
            <dl class="left-right">
              <dt>Subject</dt>
              <dd><%= email_template.subject %></dd>
              <dt>From</dt>
              <dd><%= email_template.from %></dd>
              <dt>BCC</dt>
              <dd><%= email_template.bcc %></dd>
              <dt>CC</dt>
              <dd><%= email_template.cc %></dd>
            </dl>
            </td>
          <td>
            <div class="btn-group btn-group-xs">
              <%= link_to edit_email_template_path(email_template),
                          class: 'btn btn-default',
                          data: {
                            action: 'edit',
                            toggle: 'tooltip'
                          },
                          title: 'Edit' do %>
                <i class="fa fa-edit"></i>
              <% end %>

              <%= link_to email_template_path(email_template), class: 'btn btn-default',
                          data: {
                            confirm: 'Are you sure you would like to delete the template?',
                            action: 'destroy',
                            toggle: 'tooltip'
                          },
                          'title' => 'Destroy',
                          method: :delete do %>
                <i class="fa fa-times"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>