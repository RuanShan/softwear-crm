

<div class="box-info">
  <%= render 'shared/modal_errors', object: email_template %>

  <%= form_for(email_template) do |f| %>

    <div>

      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :template_type, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.select :template_type, EmailTemplate::TEMPLATE_TYPES, {}, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :subject, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :subject, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :to, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :to, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :from, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :from, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :cc, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :cc, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :bcc, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :bcc, class: 'form-control' %>
          <br/>
        </div>
      </div>

      <%= render 'email_templates/reference' %>

    <div class="form-group">
      <%= f.label :body, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :body, class: 'form-control summernote' %>
      </div>
    </div>


      <div class="form-group">
        <%= f.label :plaintext_body, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :plaintext_body, class: 'form-control', rows: 30 %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-info">
            <%= create_or_edit_text(email_template) %> Email Template
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
