<div class="media">
  <a class="pull-left" href="#fakelink">
    <%= image_tag 'avatar/masarie.jpg', class: 'media-object img-circle', alt: 'Avatar' %>
  </a>

  <div class="media-body">
    Welcome,
    <h4 class="media-heading"><strong><%= @current_user.first_name %> <%= @current_user.last_name[0,1] %>.</strong></h4>
