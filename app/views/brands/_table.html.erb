<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="brands_list">
      <thead>
      <tr>
        <th>Name</th>
        <th>SKU</th>
      </tr>
      </thead>
      <tbody>
      <% brands.each do |brand| %>
        <tr id="<%= model_table_row_id brand %>">
          <td><%= brand.name %></td>
          <td><%= brand.sku %></td>
          <td>
            <div class="btn-group btn-group-xs">
              <%= link_to edit_brand_path(brand), class: 'btn btn-default',
                          'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to brand_path(brand), class: 'btn btn-default',
                          data: { confirm: 'Are you sure you would like to delete the brand?' }, method: :delete,
                          'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
                <i class="fa fa-times"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
