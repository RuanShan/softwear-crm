<div class="page-heading">
  <h1>Dashboard For <%= @current_user.full_name %></h1>
</div>

<% if @order_warnings.empty? %>
  <div class="alert alert-success">
    <p>None of your orders appear to have any issues at this time</p>
  </div>
<% else %>
  <div class="alert alert-danger">
    <h3>You have orders that have issues that need to be addressed</h3>
    <ul>
      <% @order_warnings.each do |o| %>
        <% if o.warnings_count == 0
          Sunspot.index o
          next 
         end %>
        <li><%= link_to "#{o.name} (#{pluralize(o.warnings_count, 'warning')})", order_warnings_path(o, active_only: 'true') %>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if !current_user.pending_quote_requests.empty? %>
    <div class="box-info row clear">
      <h2 class='heading'>
        <%= filter_quote_requests(current_user) %>
        Quote Requests Assigned to You
      </h2>
      <div id='quote-request-list' class='no-pagination'>
        <%= render partial: 'quote_requests/table', locals: { quote_requests: quote_requests_for(current_user) } %>
      </div>
    </div>
<% end %>

