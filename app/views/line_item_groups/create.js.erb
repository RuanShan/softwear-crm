disableFor('.js-new-line-item-group', 1000);

<% if @line_item_group.valid? %>

  var $newGroup = $("<%= j(render partial: 'line_item_groups/line_items', locals: { line_item_group: @line_item_group }).html_safe %>");

  $('#line-item-groups').children().last().before($newGroup);

  $('.scroll-y').scrollTo($('h3.line-item-group-title').last(),{
    duration: 1000,
    offsetTop: 100
  });

<% else %>
  
  errorModal("Sorry, looks like the server had trouble creating the line item group.");

<% end %>

