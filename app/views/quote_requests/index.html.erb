<h1>Quote Requests</h1>

<br clear='all' />

<div class='box-info full'>
  <div class='table-responsive'>
    <table class='table table-hover'>
      <thead>
        <th><strong>Name</strong></th>
        <th><strong>Email</strong></th>
        <th><strong>Date Needed</strong></th>
        <th><strong>Salesperson</strong></th>
      </thead>

      <tbody>
        <% @quote_requests.each do |quote_request| %>
          <tr>
            <td>
              <%= link_to quote_request.name, quote_request %>
            </td>
            <td><%= quote_request.email %></td>
            <td>
              <%= quote_request.date_needed.strftime("%m/%d/%Y") %>
            </td>
            <td>
              <% if quote_request.salesperson_id.nil? %>
                  <%= link_to edit_quote_request_path(quote_request), remote: true do %>
                    <i class="fa fa-2x fa-edit"></i> Unassigned (Assign)
                  <% end %>
              <% else %>
                  <%= link_to edit_quote_request_path(quote_request), remote: true do %>
                      <i class="fa fa-2x fa-edit"></i> <%= quote_request.salesperson.full_name %> (Change)
                  <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
