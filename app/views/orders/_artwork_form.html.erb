<div class='box-info'>
  <%= render partial: 'shared/modal_errors', locals: {object: artwork_request} %>
  <%= form_for artwork_request, url: order_artwork_requests_path(order, artwork_request), builder: LancengFormBuilder do |f| %>
      <div id="horizontal-form" class="collapse in">

        <div class="form-group">
          <div class="row">
            <%= f.label :jobs, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :jobs, order.jobs.all.collect { |x| ["#{x.name}", x.id] }, {include_blank: true}, {id: 'jobstokenfield', multiple: true}%>
              <% if artwork_request.errors.include?(:job) %>
                  <% artwork_request.errors.full_messages_for(:job).each do |message| %>
                      <p class="text-danger"><%= message %></p>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :imprint_method, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :imprint_method, ImprintMethod.all.collect { |x| ["#{x.name} - #{x.production_name}", x.id] }, {include_blank: true}, {id:'artwork_imprint_method_fields', data: {url: imprint_methods_path}} %>
              <% if artwork_request.errors.include?(:imprint_method) %>
                  <% artwork_request.errors.full_messages_for(:imprint_method).each do |message| %>
                      <p class="text-danger"><%= message %></p>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group"id="imprint_method_print_locations_and_ink_colors">

        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :user, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :user, User.all.collect { |x| ["#{x.firstname} - #{x.lastname}", x.id] }, include_blank: true %>
              <% if artwork_request.errors.include?(:user) %>
                  <% artwork_request.errors.full_messages_for(:user).each do |message| %>
                      <p class="text-danger"><%= message %></p>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :artwork_status, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :artwork_status, [['Pending'], ['In Progress'], ['Art Created']], include_blank: true %>
              <% if artwork_request.errors.include?(:artwork_status) %>
                  <% artwork_request.errors.full_messages_for(:artwork_status).each do |message| %>
                      <p class="text-danger"><%= message %></p>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :deadline, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.date_select :deadline %>
              <%= f.time_select :deadline, ignore_date: true %>
              <% if artwork_request.errors.include?(:deadline) %>
                  <% artwork_request.errors.full_messages_for(:deadline).each do |message| %>
                      <p class="text-danger"><%= message %></p>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :description, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :description, class: 'form-control summernote' %>
              <% if artwork_request.errors.include?(:description) %>
                  <% artwork_request.errors.full_messages_for(:description).each do |message| %>
                      <p class="text-danger"><%= message %></p>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <hr>
      </div>
  <% end %>
</div>