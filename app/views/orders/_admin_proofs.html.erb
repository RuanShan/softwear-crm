<%= render 'artwork_tab_disabled', message: "Below are proofs imported from that software." %>
<h2>Proofs Imported from Admin</h2>

<% order.admin_proofs.each do |ap| %>
  <div class='col-sm-6 col-sm-12'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= ap.name %>
        </h3>
      </div>
      <div class="panel-body">
        <%= link_to(ap.file_url, target: :_blank) do %>
          <% if ap.thumbnail_url.blank? %>
            View full image
          <% else %>
            <%= image_tag(ap.thumbnail_url, class: 'img img-responsive') %>
          <% end %>
        <% end %>
        <dl>
          <dt>Description:</dt>
          <dd><%= ap.description %></dd>
        </dl>
      </div>
    </div>
  </div>
<% end %>
