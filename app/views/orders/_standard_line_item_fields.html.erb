<div class='list-group-item'>
  <h4>
    &quot;<%= f.object.name %>&quot;
    @
    <%= number_to_currency f.object.unit_price %> ea.
    <span class='badge'>&times;<%= f.object.quantity %></span>
  </h4>

  <div class='cost-fields-container'>
    <div class='input-group'>
      <%= f.label :cost_amount, 'Cost', class: 'control-label' %>
      <%= f.text_field :cost_amount, class: "form-control" %>
      <span class='input-group-addon'>$</span>
    </div>
  </div>
</div>
