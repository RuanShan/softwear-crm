<%= render_error_modal_for @order %>

<div class="row-fluid orders-edit">
  <div class="pull-left">
      <%= profile_picture_of @order.salesperson, style: 'display: inline;' %>
  </div>

  <div class="pull-right text-right">
    <%= link_to order_report_order_path(@order), class: 'btn btn-primary',
                'data-action' => 'show' do %>
        <i class="glyphicon glyphicon-list-alt"></i> Order Report
    <% end %>

    <%= link_to imprintable_order_sheets_order_path(@order), class: 'btn btn-primary',
                'data-action' => 'show' do %>
        <i class="softwear-icon-t-shirt"></i> Imprintable Sheets
    <% end %>

    <%= link_to order_path(@order), class: 'btn btn-primary',
      data: {action: :show, toggle: :tooltip, title: 'Printable Invoice', placement: :bottom } do %>
        <i class="fa fa-print"></i>
    <% end %>

    <% unless @order.notification_state == 'picked_up' %>
      <span ".edit-notification-buttons">
      <% unless @order.fba? %>
        <%= link_to state_order_path(@order, :notification_state), remote: true,
          data: {toggle: :tooltip, :title => 'Notify Customer', placement: :bottom},
          class: 'btn btn-primary'  do %>
            <i class="glyphicon glyphicon-phone-alt"></i>
        <% end %>
      <% end %>

      <%= link_to transition_order_path(@order, :notification_state,  :picked_up), remote: true,
        method: :post, data: { toggle: :tooltip, title: 'Mark Picked Up', placement: :bottom,
        confirm: 'Are you sure you want to mark this order as picked up?'},
        class: 'btn btn-primary' do %>
          <i class="glyphicon glyphicon-thumbs-up"></i>
        <% end %>
      </span>
    <% end %>

    <%= link_to order_warnings_path(@order.id), class: 'btn btn-warning' do %>
      <i class="fa fa-exclamation-triangle"></i> Warnings
      <%= @order.warnings.active.any? ? "<span class='badge'>#{@order.warnings.active.size}</span>".html_safe : '' %>
    <% end %>

    <% unless @order.canceled? %>
      <%= link_to check_cancelation_order_path(@order), class: 'btn btn-danger', remote: true do %>
        <i class='fa fa-ban'></i> Cancel Order
      <% end %>
    <% end %>

  </div>

  <div class="page-heading animated fadeInDownBig pull-left">
    <h1>
      Edit <strong>Order #<%= @order.id %></strong>
    </h1>
    <h2>
      <% if @order.canceled? %>
        <span class="label label-danger">Canceled</span>
      <% end %>
      <% if @order.fba? %>
        <span class="label label-warning">FBA</span>
      <% end %>
      <span class="<%= 'canceled' if @order.canceled %>"><%= @order.name %></span>
    </h2>
    <% unless @order.fba? %>
      Customer URL: <%= link_to customer_order_url(@order.customer_key),  customer_order_path(@order.customer_key), target: "_blank" %>
    <% end %>
  </div>
</div>
<br clear="all" />
<table class="table table-condensed">
  <thead>
    <% unless @order.fba? %>
      <th>Payment State
      </th>
    <% end %>
    <th>Invoice State
    </th>
    <th>Production State
    </th>
    <th>Artwork State
    </th>
    <% unless @order.fba? %>
      <th>Notification State
      </th>
    <% end %>
  </thead>
  <tbody>
    <tr id="order_<%= @order.id %>">
      <% unless @order.fba? %>
        <td class='payment-state'>
          <span class="label <%= get_style_from_status(@order.payment_status)%>"><%= @order.payment_status %></span>
        </td>
      <% end %>

      <td class='invoice-state'>
        <span class="label <%= get_style_from_invoice_state(@order.invoice_state)%>"><%= @order.invoice_state.humanize %></span>
        <br />

        <% if !@order.canceled? && @order.invoice_state != 'approved' %>
          <%= form_for @order do |f| %>
            <%= f.hidden_field :invoice_state, value: 'approved' %>
            <%= button_tag 'Approve Invoice', class: 'btn btn-sm btn-success margin-top-10' %>
          <% end %>
        <% end %>
      </td>

      <td class='production-state'>
        <span class="label <%= get_style_from_production_state(@order.production_state)%>"><%= @order.production_state.humanize %></span>
        <br />
          <% if @order.production_url && @order.production_state != 'pending' %>
            <%= link_to 'View in Production', @order.production_url, target: :_blank, class: 'btn btn-sm btn-success margin-top-10' %>
          <% elsif !@order.canceled? %>
            <%= link_to 'Send to Production', send_to_production_order_path(@order), method: :post, class: 'btn btn-sm btn-danger margin-top-10', title: 'Karsten only', data: { toggle: 'tooltip' }  %>
          <% end %>
      </td>

      <td class='artwork-state'>
        <span class="label label-primary <%= get_style_from_artwork_state(@order.artwork_state) %>"><%=  @order.artwork_state.humanize %></span>
      </td>

      <% unless @order.fba? %>
        <td class='notification-state'>
          <span class="label <%= get_style_from_notification_state(@order.notification_state)%>"><%= @order.notification_state.humanize %></span>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>

<% if @order.invoice_rejected? %>
  <div class='alert alert-danger'>
    <div class='col-sm-10'>
      <strong>Invoice rejected:</strong> &quot;<%= @order.invoice_reject_reason || 'ERROR (this is a bug, customer should be required to specify a reason for rejection)' %>&quot;
    </div>
    <div class='col-sm-2'>
      <%= form_for @order do |f| %>
        <%= f.hidden_field :invoice_state, value: 'pending' %>
        <%= button_tag 'Reset Invoice State', class: 'btn btn-warning' %>
      <% end %>
    </div>
    <div class='clearfix'></div>
  </div>
<% end %>

<%= content_tag(:div, id: 'order-page', 'data-order-id' => @order.id) {} %>

<div class="row">
  <div class="col-sm-12">
      <div class="box-info full">
          <ul class="nav nav-tabs nav-justified">
            <li class="active">
              <%= nav_tab(:jobs) do %>
                <i class="fa fa-tasks"></i> Jobs
              <% end %>
            </li>
            <li>
              <%= nav_tab(:details, remote: true) do %>
                <i class="fa fa-shopping-cart"></i> Details
              <% end %>
            </li>
            <li>
              <%= nav_tab(:payments, disabled: @order.fba?, remote: true) do %>
                <i class="fa fa-money"></i> Payments
              <% end %>
            </li>
            <li>
              <%= nav_tab(:shipments, remote: true) do %>
                <i class="fa fa-archive"></i> Shipments
              <% end %>
            </li>
            <li>
              <%= nav_tab(:artwork, remote: !@order.imported_from_admin?) do %>
                <i class="fa fa-picture-o"></i> Artwork
              <% end %>
            </li>
            <li>
              <%= nav_tab(:proofs, remote: !@order.imported_from_admin?) do %>
                <i class="fa fa-file-text-o"></i> Proofs
              <% end %>
              </a>
            </li>
            <li>
              <%= nav_tab(:comments, remote: true) do %>
                <i class="fa fa-bars"></i> Comments
              <% end %>
            </li>
            <li>
              <%= nav_tab(:timeline) do %>
                <i class="fa fa-clock-o"></i> Timeline
              <% end %>
            </li>
            <li>
              <%= nav_tab(:costs, remote: true) do %>
                <i class="fa fa-dollar"></i> Costs
              <% end %>
              </a>
            </li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane animated fadeInRight active" id="jobs">
              <%= render partial: 'jobs/jobs', locals: { order: @order } %>
            </div>

            <div class="tab-pane animated fadeInRight" id="timeline">
              <% if @order.quotes.empty? %>
                <%= render 'shared/timeline', activities: @activities %>
              <% else %>
                <div class="col-sm-4">
                  <%= render 'shared/timeline', activities: @activities %>
                </div>
                <div class="col-sm-8">
                  <% @order.quotes.each do |quote| %>
                    <h4>From quote: <%= link_to quote.name, quote %></h4>
                    <%= render 'shared/freshdesk_ticket', quote: quote, current_user: @current_user %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="tab-pane animated  fadeInRight" id="details">
              <%# remote orders/details %>
            </div>

            <div class="tab-pane animated fadeInRight" id="payments">
              <%# remote payments/payments %>
            </div>

            <div class="tab-pane animated fadeInRight" id="shipments">
              <%# remote orders/shipments %>
            </div>

            <div class="tab-pane animated fadeInRight" id="artwork">
             <% if @order.imported_from_admin? %>
               <%= render 'artwork_tab_disabled', message: "There was no artwork concept in this version." %>
             <% end %>
            </div>

            <div class="tab-pane animated fadeInRight" id="proofs">
             <% if @order.imported_from_admin? %>
               <%= render 'admin_proofs', order: @order %>
             <% end %>
            </div>

            <div class="tab-pane animated fadeInRight" id="costs">
              <%# remote orders/costs %>
            </div>

            <div class="tab-pane animated fadeInRight" id="comments">
              <%# remote orders/comments %>
            </div>
          </div>
      </div>
  </div>
</div>

