<div id="horizontal-form proof-form" class="collapse in">
  <div class="form-group">
    <div class="row">
      <%= f.label :approve_by, 'Approve Proof By', class: 'col-sm-2 control-label' %>

      <div class="col-sm-10">
        <div class="input-group js-datetimepicker">
          <%= f.text_field :approve_by, value: value_time(proof.approve_by) %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>

        <% if proof.errors.include?(:approve_by) %>
          <% proof.errors.full_messages_for(:approve_by).each do |message| %>
            <p class="text-danger"><%= message %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-group js-pending-select">
    <div class="row">
      <%= f.label :status, class: 'col-sm-2 control-label' %>

      <div class="col-sm-10">
        <% selected =
                   if proof && !proof.status.nil?
                      { selected: proof.status }
                    else
                      { selected: Proof::VALID_PROOF_STATUSES.first }
                    end %>


        <%= f.select :status, Proof::VALID_PROOF_STATUSES, selected %>

        <% if proof.errors.include?(:status) %>
          <% proof.errors.full_messages_for(:status).each do |message| %>
            <p class="text-danger"><%= message %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <p><strong>Which Job does this proof belong to?</strong></p>

  <div class="form-group">
    <%= f.select :job_id, options_from_collection_for_select(order.jobs, :id, :name, f.object.job_id.to_s), {}, class: 'form-control' %>
  </div>

  <hr>

  <p><strong>Which Artwork is included?</strong></p>

  <div class="form-group">
    <% order.artwork_requests.each do |artwork_request| %>
      <% artwork_request.artworks.each do |artwork| %>
        <div class="row">
          <div class="col-sm-8">
            <%= image_tag artwork.preview.file.url(:medium) %>
          </div>
          <div class="col-sm-4">
            <% checked =
                       if proof && proof.artwork_ids.include?(artwork.id)
                         { checked: true }
                       else
                         false
                       end %>

            <%= check_box_tag 'proof[artwork_ids][]', artwork.id, checked %>
          </div>
        </div>

        <br>
      <% end %>
    <% end %>
  </div>

  <hr>

  <p><strong>Are there any Mockups to include?</strong></p>

  <div class="form-group">
    <%= f.fields_for :mockups, multipart: true do |ff| %>
      <%= render partial: 'mockup_fields', locals: { f: ff } %>
    <% end %>

    <% if proof.errors.include?(:mockups) %>
      <% proof.errors.full_messages_for(:mockups).each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    <% end %>

    <%= link_to_add_fields "<i class='fa fa-plus proof-mockups'></i> Add Mockup".html_safe, f, :mockups %>
  </div>
</div>

<hr>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6">
      <%= f.submit "#{create_or_edit_text(proof)} Proof" %>
    </div>
  </div>
</div>
