<% if @proof.valid? %>

  $('#proof-<%= @proof.id %>').replaceWith("<%= escape_javascript(render(partial: 'proof', locals: { order: @order, proof: @proof })).html_safe %>");

  setupContentModal(function($contentModal){
    $contentModal.find('.modal-content').addClass('modal-content-success')
  });

  showContentModal({
    title: 'SUCCESS',
    body: 'Successfuly updated Proof!'
  }).delay(50)

  updateOrderTimeline();

<% else %>

  var form = $('#contentModal .modal-body form');
  if (form.data('errorHandler') == null) {
    form.data('errorHandler', ErrorHandler('proof', form));
  }

  var handler = form.data('errorHandler');
  handler.handleErrors(JSON.parse("<%= escape_javascript(@proof.errors.messages.to_json.html_safe) %>"), $("<%= escape_javascript(render(partial: 'shared/modal_errors', locals: { object: @proof })).html_safe %>"));

<% end %>