<style type="text/css">
    /* show the move cursor as the user moves the mouse over the panel header.*/
    #sizes_list tbody tr {
        cursor: move;
    }
</style>

<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="sizes_list">
      <thead>
      <tr>
        <th>Name</th>
        <th>Display Value</th>
        <th>Stock Keeping Unit</th>
        <th>Sort Order</th>
      </tr>
      </thead>
      <tbody>
      <% sizes.each do |size| %>
          <tr id="<%= model_table_row_id size %>">
            <td><%= size.name %></td>
            <td><%= size.display_value%></td>
            <td><%= size.sku %></td>
            <td><%= size.sort_order %></td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to edit_size_path(size), 'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit', class: 'btn btn-default' do %><i class="fa fa-edit"></i><% end %>
                <%= link_to size_path(size), 'data-action' => 'destroy', 'data-toggle' => 'tooltip', 'title' => 'Destroy', class: 'btn btn-default', method: :delete, data: {confirm: 'Are you sure you would like to delete the size?'} do %><i class="fa fa-times"></i><% end %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
