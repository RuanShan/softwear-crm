<div class="box-info full">
  <div class="table-responsive">
    <table class="table table-hover" id="js-sizes-list">
      <thead>
      <tr>
        <th>Name</th>
        <th>Display Value</th>
        <th>SKU</th>
      </tr>
      </thead>
      <tbody>
        <% sizes.each do |size| %>
            <tr class="size_row" id="<%= model_table_row_id size %>">
              <td><%= size.name %></td>
              <td><%= size.display_value%></td>
              <td><%= size.sku %></td>
              <td>
                <div class="btn-group btn-group-xs">
                  <%= link_to edit_size_path(size), class: 'btn btn-default',
                              'data-action' => 'edit', 'data-toggle' => 'tooltip', 'title' => 'Edit' do %>
                    <i class="fa fa-edit"></i>
                  <% end %>

                  <%= link_to size_path(size), class: 'btn btn-default',
                              data: {confirm: 'Are you sure you would like to delete the size?'},
                              method: :delete, 'data-action' => 'destroy',
                              'data-toggle' => 'tooltip', 'title' => 'Destroy' do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                </div>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>