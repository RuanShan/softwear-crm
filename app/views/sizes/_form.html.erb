<div class="box-info">
  <%= render 'shared/modal_errors', object: size %>

  <%= form_for size do |f| %>
    <div id="horizontal-form" class="collapse in">
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>

          <p class="help-block">The name of the size
        </div>
      </div>

      <div class="form-group">
        <%= f.label :display_value, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <%= f.text_field :display_value, class: 'form-control' %>

          <p class="help-block">The display value of the size
        </div>
      </div>

      <div class="form-group">
        <%= f.label :sku, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <%= f.text_field :sku, class: 'form-control' %>

          <p class="help-block">SKU for this size</p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :upcharge_group, class: 'col-sm-2 control-label' %>

        <div class="col-sm-10">
          <%= f.select :upcharge_group, Size::UPCHARGE_GROUPS.to_a.map(&:reverse), {}, class: 'form-control select2' %>

          <p class="help-block">Upcharges for this size</p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :retail, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="radio">
            <%= f.radio_button :retail, false, value: false %> No
          </div>

          <div class="radio">
            <%= f.radio_button :retail, true, value: false %> Yes
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-info"><%= create_or_edit_text(size) %> Size</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
