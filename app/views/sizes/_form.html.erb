
<div class="box-info">
  <%= render partial: 'shared/modal_errors', locals: {object: size} %>
  <%= form_for size do |f| %>
      <!-- Horizontal form body -->
      <div id="horizontal-form" class="collapse in">

        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if size.errors.include?(:name) %>
                <% size.errors.full_messages_for(:name).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :name, class: 'form-control' %>
            <p class="help-block">The name of the size
          </div>
        </div>

        <div class="form-group">
          <%= f.label :sku, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if size.errors.include?(:sku) %>
                <% size.errors.full_messages_for(:sku).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :sku, class: 'form-control' %>
            <p class="help-block">The stock keeping unit for this size</p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :sort_order, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if size.errors.include?(:sort_order) %>
                <% size.errors.full_messages_for(:sort_order).each do |message| %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            <% end %>
            <%= f.text_field :sort_order, class: 'form-control' %>
            <p class="help-block">The sort order of the size (an integer)
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info"><%= create_or_edit_text(size) %> Size</button>
          </div>
        </div>

      </div>
  <% end %>
</div>